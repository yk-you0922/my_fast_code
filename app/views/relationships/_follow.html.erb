<%# フォローボタン 部分テンプレート %>
<td>
  フォロー数 : 
  <%= user.followings.count %>
</td>
<td>
  フォロワー数 : 
  <%= user.followers.count %>
</td>
<% if user != current_user %>
  <% if user.followed_by?(current_user) %>
      <td class="unfollow-button">
        <%= link_to 'フォロー済み', user_relationship_path(user.id), method: :delete, remote: true %>
      </td>
    <% else %>
      <td class="follow-button">
        <%= link_to 'フォローする', user_relationship_path(user.id), method: :post, remote: true %>
      </td>
  <% end %>
<% end %>

