<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <tr>
      <td>
        お気に入り解除
        <%= link_to post_favorites_path(post.id), method: :delete, remote: true do %>
          <i class="fas fa-heart red_heart"></i>
          <%= post.favorites.count %>
        <% end %>
      </td>
    </tr>
  <% else %>
    <tr>
      <td>
        お気に入り登録
        <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
          <i class="fas fa-heart no_heart"></i>
          <%= post.favorites.count %>
        <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td>お気に入り数： <%= post.favorites.count %></td>
  </tr>
<% end %>