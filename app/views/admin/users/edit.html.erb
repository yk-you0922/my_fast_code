<%# 管理者 ユーザー編集画面 %>
<h2><%= @user.name %>さんの登録情報編集</h2>
<%= form_for(@user, url: admin_user_path) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <table>
    <tbody>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td>ユーザー名</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>性別</td>
        <td>
          <%= f.radio_button :is_sex_flag, true, checked: true %>
          <%= f.label :is_sex_flag, "男性", {value: :true} %>
          <%= f.radio_button :is_sex_flag, false %>
          <%= f.label :is_sex_flag, "女性", {value: :false} %>
        </td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td>
          <%= f.radio_button :is_withdrawal_flag, true, checked: true %>
          <%= f.label :is_withdrawal_flag, "有効", {value: :true} %>
          <%= f.radio_button :is_withdrawal_flag, false %>
          <%= f.label :is_withdrawal_flag, "退会済み", {value: :false} %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '更新する' %>
<% end %>