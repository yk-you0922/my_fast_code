<%# 管理者 ユーザー編集画面 %>
<div class="admin-users-edit-wrapper">
  <h2><%= @user.name %>さんの登録情報編集</h2>

  <%= form_for(@user, url: admin_user_path) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <table>
      <tbody>
        <tr>
          <td class="admin-user-info-cell">メールアドレス</td>
          <td class="admin-user-info-cell"><%= f.text_field :email, size: "50x10" %></td>
        </tr>
        <tr>
          <td class="admin-user-info-cell">ユーザー名</td>
          <td class="admin-user-info-cell"><%= f.text_field :name, size: "50x10" %></td>
        </tr>
        <tr>
          <td class="admin-user-info-cell">性別</td>
          <td class="admin-user-info-cell">
            <%= f.radio_button :is_sex_flag, true, checked: true %>
            <%= f.label :is_sex_flag, "男性", {value: :true} %>
            <%= f.radio_button :is_sex_flag, false %>
            <%= f.label :is_sex_flag, "女性", {value: :false} %>
          </td>
        </tr>
        <tr>
          <td class="admin-user-info-cell">ステータス</td>
          <td class="admin-user-info-cell">
            <%= f.radio_button :is_withdrawal_flag, true, checked: true %>
            <%= f.label :is_withdrawal_flag, "有効", {value: :true} %>
            <%= f.radio_button :is_withdrawal_flag, false %>
            <%= f.label :is_withdrawal_flag, "退会済み", {value: :false} %>
          </td>
        </tr>
      </tbody>
    </table>
    <%= f.submit '更新する' %>
  <% end %>
</div>